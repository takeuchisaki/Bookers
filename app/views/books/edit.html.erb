<h1>Editing Book</h1>

<%= form_with model: @book do |f| %>
  <div class="find">
    <label class="book_title>">Title</label>
    <div><%= f.text_field :title %></div>
  </div>
  <div class="find">
    <label class="book_body">Body</label>
    <div><%= f.text_area :body %></div>
  </div>
   <div class="actions">
      <%= f.submit 'Update Book' %>
  </div>
 <% end %>

<span><%= link_to 'Show', book_path(@book.id) %></span>
